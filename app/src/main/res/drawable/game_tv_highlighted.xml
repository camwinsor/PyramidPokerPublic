<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <size android:height="40dp" android:width="70dp" />

    <!-- view background color -->
    <gradient android:startColor="#a4878787"
        android:endColor="#b1000000"
        android:angle="270"
        />

    <!-- view border color and width -->
    <stroke
        android:width="6dp"
        android:color="#a428b900">
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="20dp"   >
    </corners>

</shape>